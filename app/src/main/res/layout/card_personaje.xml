<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="15dp"
    android:outlineAmbientShadowColor="@color/yellowCM"
    app:cardCornerRadius="20dp"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_marco"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/veryLightGreyCM">

        <ImageView
            android:id="@+id/card_foto"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/usuario" />

        <TextView
            android:id="@+id/card_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="nombre"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/redCM"
            app:layout_constraintEnd_toEndOf="@+id/card_foto"
            app:layout_constraintStart_toStartOf="@+id/card_foto"
            app:layout_constraintTop_toBottomOf="@+id/card_foto" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>