        <item name="colorPrimaryVariant">@color/lightRedCM</item>
        <item name="colorOnPrimary">@color/whiteCM</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellowCM</item>
        <item name="colorSecondaryVariant">@color/lightYellowCM</item>
        <item name="colorOnSecondary">@color/blackCM</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
